<Window x:Class="ArrayListApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArrayListApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Left" Height="47" Margin="141,217,0,0" VerticalAlignment="Top" Width="121" FontSize="16" Click="btnAdd_Click"/>
        <Button x:Name="btnRemove" Content="Remove" HorizontalAlignment="Left" Height="47" Margin="279,217,0,0" VerticalAlignment="Top" Width="121" FontSize="16" Click="btnRemove_Click"/>
        <Button x:Name="btnShowAll" Content="Show All" HorizontalAlignment="Left" Height="47" Margin="419,217,0,0" VerticalAlignment="Top" Width="121" FontSize="16" Click="btnShowAll_Click"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="34" Margin="141,160,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="399" FontSize="16" Text="Please input name"/>

    </Grid>
</Window>
